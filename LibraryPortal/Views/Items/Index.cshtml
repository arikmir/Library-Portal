@model List<LibraryPortal.Models.Item>

@{
    ViewBag.Title = "Index";
}

<script type="text/javascript" src="~/Scripts/libraryItems.js"></script>

@Html.Partial("_create", new LibraryPortal.Models.Item())

<div style="padding-top: 3px;">
    <!-- Trigger the modal with a button -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Create New</button>
</div>
<div id="container"></div>
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <p>Delete</p>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this item?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="btnDelete" data-dismiss="modal">Confirm</button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    libraryItems.getItems();
    $("#btnDelete").bind("click", libraryItems.deleteItem);
</script>